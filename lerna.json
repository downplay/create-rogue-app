{
  "version": "independent",
  "packages": ["packages/*", "games/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-optional"],
  "useWorkspaces": true,
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "publish": {
      "npmClient": "yarn",
      "message": "chore(release): publish"
    },
    "version": {
      "npmClient": "yarn",
      "message": "chore(release): version"
    }
  }
}
